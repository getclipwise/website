---
import RootLayout from "@/layouts/root-layout.astro";
import { Icon } from "astro-icon/components";
---

<RootLayout
  seo={{
    title: "Page Not Found",
    description: "The page you are looking for does not exist.",
    noindex: true,
  }}
  structuredData={{
    type: "website",
    breadcrumbs: [
      { name: "Home", path: "/" },
      { name: "404", path: "/404" },
    ],
  }}
>
  <main
    class="relative flex flex-col items-center overflow-hidden px-4 py-32 text-center md:py-48 lg:py-56"
  >
    <!-- Background gradient mesh (matching hero) -->
    <div
      class="pointer-events-none absolute inset-0 -z-10 overflow-hidden"
      aria-hidden="true"
    >
      <div
        class="absolute -top-1/2 left-1/2 size-[600px] -translate-x-1/2 rounded-full bg-linear-to-br from-emerald-400/20 via-emerald-500/5 to-transparent blur-3xl dark:from-emerald-400/15 dark:via-emerald-500/5"
      >
      </div>
      <div
        class="absolute -bottom-1/4 right-1/4 size-[400px] rounded-full bg-linear-to-tl from-emerald-500/15 via-transparent to-transparent blur-3xl dark:from-emerald-500/10"
      >
      </div>
    </div>

    <!-- Icon with emerald accent -->
    <div
      class="mb-8 rounded-full border border-primary/20 bg-primary/5 p-5 shadow-lg shadow-primary/10"
    >
      <Icon name="lucide:file-question" class="size-12 text-primary" />
    </div>

    <!-- Heading with gradient highlight -->
    <h1 class="text-4xl font-extrabold tracking-tight md:text-5xl lg:text-6xl">
      Page{" "}
      <span
        class="bg-linear-to-r from-emerald-600 to-emerald-500 bg-clip-text text-transparent dark:from-emerald-400 dark:to-emerald-300"
      >
        not found
      </span>
    </h1>

    <p class="mt-6 max-w-md text-lg text-muted-foreground md:text-xl">
      Sorry, we couldn't find the page you're looking for. It might have been
      moved or deleted.
    </p>

    <a
      href="/"
      class="group mt-10 inline-flex items-center gap-2 font-medium text-muted-foreground transition-colors hover:text-primary"
    >
      <Icon
        name="lucide:arrow-left"
        class="size-4 transition-transform group-hover:-translate-x-1"
        aria-hidden="true"
      />
      Back to Home
    </a>
  </main>
</RootLayout>
