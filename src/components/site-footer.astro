---
import Logo from "@/assets/icon.svg";
import Container from "@/components/container.astro";
import { siteConfig } from "@/lib/site-config";
import { removeTrailingSlash } from "@/utils/url";
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

const currentPath = removeTrailingSlash(Astro.url.pathname);

const footerLinks = [
  { label: "How it works", href: "/#how-it-works" },
  { label: "Features", href: "/#features" },
  { label: "Use cases", href: "/#use-cases" },
  { label: "Pricing", href: "/#pricing" },
];

const legalLinks = [{ label: "Privacy Policy", href: "/privacy" }];

const socialLinks = [
  {
    name: "X",
    href: `https://x.com/${siteConfig.author.twitter.replace("@", "")}`,
    icon: "simple-icons:x",
  },
  {
    name: "GitHub",
    href: `https://github.com/${siteConfig.author.github}`,
    icon: "simple-icons:github",
  },
];
---

<footer
  class="relative bg-linear-to-r from-emerald-950 via-emerald-900 to-emerald-950 py-12"
>
  <!-- Subtle gradient overlay for depth -->
  <div
    class="pointer-events-none absolute inset-0 bg-linear-to-t from-black/20 to-transparent"
    aria-hidden="true"
  >
  </div>

  <Container>
    <div class="relative">
      <!-- Top section: Logo, nav, and social -->
      <div class="grid gap-8 md:grid-cols-3">
        <!-- Brand -->
        <div class="flex flex-col items-center gap-3 md:items-start">
          <a
            href="/"
            class="flex items-center gap-2.5 font-semibold text-white no-underline transition-opacity hover:opacity-90"
          >
            <Logo width={32} height={32} class="size-8 drop-shadow-md" />
            <span class="text-lg tracking-tight">{siteConfig.name}</span>
          </a>
          <p
            class="max-w-xs text-center text-sm text-emerald-100/70 text-balance md:text-left"
          >
            Convert webpages to clean Markdown for AI assistants.
          </p>
        </div>

        <!-- Navigation -->
        <nav
          aria-label="Footer navigation"
          class="grid grid-cols-2 mx-auto gap-16 md:gap-8"
        >
          <div>
            <h3
              class="mb-3 text-xs font-semibold uppercase tracking-wider text-emerald-100/50"
            >
              Navigate
            </h3>
            <ul class="flex flex-col gap-2.5">
              {
                footerLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      aria-current={
                        currentPath === link.href ? "page" : undefined
                      }
                      class="text-sm text-emerald-100/80 no-underline transition-colors hover:text-white aria-[current=page]:text-white aria-[current=page]:underline aria-[current=page]:underline-offset-4"
                    >
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div>
            <h3
              class="mb-3 text-xs font-semibold uppercase tracking-wider text-emerald-100/50"
            >
              Legal
            </h3>
            <ul class="flex flex-col gap-2.5">
              {
                legalLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      aria-current={
                        currentPath === link.href ? "page" : undefined
                      }
                      class="text-sm text-emerald-100/80 no-underline transition-colors hover:text-white"
                    >
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </nav>

        <!-- Social links -->
        <div class="flex items-start justify-center gap-4 md:justify-end">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={link.name}
                class="flex size-10 items-center justify-center rounded-full bg-white/10 text-emerald-100/80 transition-all hover:bg-white/20 hover:text-white"
              >
                <Icon name={link.icon} class="size-5" aria-hidden="true" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Divider -->
      <div class="my-8 h-px bg-white/10"></div>

      <!-- Bottom section: Copyright and credits -->
      <div
        class="flex flex-col items-center justify-between gap-4 text-sm text-emerald-100/60 md:flex-row"
      >
        <p class="m-0">
          &copy; {currentYear}
          {siteConfig.name}. All rights reserved.
        </p>
        <p class="m-0">
          Made with <span class="text-red-400">â™¥</span> by{" "}
          <a
            href={siteConfig.author.website}
            target="_blank"
            rel="noopener noreferrer"
            class="font-medium text-emerald-100/80 no-underline transition-colors hover:text-white"
          >
            {siteConfig.author.name}
          </a>
        </p>
      </div>
    </div>
  </Container>
</footer>
