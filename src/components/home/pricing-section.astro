---
import PricingCard from "@/components/pricing-card.astro";
import type { PricingTier } from "@/types";

interface Props {
  id: string;
  title: string;
  subtitle: string;
  tiers: PricingTier[];
  disclaimer: string;
}

const { id, title, subtitle, tiers, disclaimer } = Astro.props;
---

<section id={id} class="border-y bg-muted/30 py-20 md:py-28">
  <div class="mx-auto max-w-5xl px-4">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight md:text-4xl">
        {title}
      </h2>
      <p class="mt-4 text-lg text-muted-foreground">
        {subtitle}
      </p>
    </div>

    <div
      class="mt-12 grid gap-6 md:grid-cols-2 md:gap-8 lg:mx-auto lg:max-w-3xl"
    >
      {tiers.map((tier) => <PricingCard {...tier} />)}
    </div>

    <p class="mt-8 text-center text-sm text-muted-foreground">
      {disclaimer}
    </p>
  </div>
</section>
